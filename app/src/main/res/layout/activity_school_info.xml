<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout tools:context=".LoginActivity" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent">


    <LinearLayout android:orientation="vertical" android:layout_height="225dp" android:layout_width="match_parent" android:background="@color/colorPrimary"><![CDATA[
    go" android:layout_marginTop="20dp" android:layout_gravity="center"/>

    ]]>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Hoseo UNIV"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="153dp"
            android:layout_gravity="center"
            android:text="학교 정보 추가"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />

</LinearLayout>


    <LinearLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent">

        <EditText
            android:id="@+id/sNumberEditText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:hint="학교번호"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />


        <EditText
            android:id="@+id/sNameEditText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:hint="부서 이름"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/sTelephoneEditText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:hint="전화 번호"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <Button
            android:id="@+id/sInfoButton"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"
            android:text="등록"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

</RelativeLayout>